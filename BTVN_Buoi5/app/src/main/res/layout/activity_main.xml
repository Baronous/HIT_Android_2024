<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/FragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageButton
            android:id="@+id/ButtonFragment1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home_light"
            android:layout_weight="1"
            android:background="@color/white"/>

        <ImageButton
            android:id="@+id/ButtonFragment2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/search_light"
            android:layout_weight="1"
            android:background="@color/white"/>

        <ImageButton
            android:id="@+id/ButtonFragment3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/add_square_light"
            android:layout_weight="1"
            android:background="@color/white"/>

        <ImageButton
            android:id="@+id/ButtonFragment4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/archive_light"
            android:background="@color/white"/>

        <ImageButton
            android:id="@+id/ButtonFragment5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/user_alt_light"
            android:background="@color/white"/>
    </LinearLayout>

</LinearLayout>


